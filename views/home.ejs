<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Assignment Grades</title>

  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="style.css">

  <script src="/bower_components/jquery/dist/jquery.min.js"></script>
  <!-- <script src="/bower_components/moment/moment.js"></script> -->
  <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="home.js"></script>

</head>
<body>
  <div class="container">
    <h1 class="text-center">Add a new Grade</h1>

    <button class="btn btn-default btn-lg newGrade">Add a new Grade</button>


    <table class="table">
      <thead>
        <tr>
          <th>Assignment</th>
          <th>Score</th>
          <th>Total</th>
          <th>Total Points</th>
          <th>Letter Grade</th>
        </tr>
      </thead>
      <tbody>

        <% for(var i = 0; i < grades.length; i++) { %>
          <tr data-id=<%=grades[i].id%>  >
            <td><%= grades[i].assignment %></td>
            <td><%= grades[i].score %></td>
            <td><%= grades[i].total %></td>
            <td>
              <%= grades[i].totalPoints %></td>
            <!-- <td>
              <% if(grades[i].isComplete) { %>
                <input type="checkbox" name="" id="" checked>
              <% } else { %>
                <input type="checkbox" name="" id="">
              <% } %>
            </td> -->
          </tr>

        <%  }  %>

      </tbody>
    </table>
  </div>



  <div class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <form class='newGradeForm'>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">New Grade</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <label for="newGradeAssignment">Assignment</label>
              <input type="text" class="form-control" id="newGradeAssignment" placeholder="Math Test" required>
            </div>
            <div class="form-group">
              <label for="newGradeScore">Score</label>
              <input type="num" class="form-control" id="newGradeScore" required>
            </div>
            <div class="form-group">
              <label for="newGradeTotalPoints">Total Points</label>
              <input type="num" class="form-control" id="newGradeTotalPoints" required>
            </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Create Grades for new assignment</button>
          </div>
        </form>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->


</body>
</html>
